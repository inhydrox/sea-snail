{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@type/*": ["src/@types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.json",
    "./*.ts"
  ],
  "exclude": [
    "./dist/*",
    "./node_modules/*"
  ]
}